{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@Components/*": [
        "./src/components/*"
      ],
      "@Data/*": [
        "./src/data/*"
      ],
      "@Images/*": [
        "./src/assets/images/*"
      ],
      "@Svgs/*": [
        "./src/assets/svgs/*"
      ],
      "@Types/*": [
        "./src/types/*"
      ],
      "@Styles/*": [
        "./src/styles/*"
      ]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
